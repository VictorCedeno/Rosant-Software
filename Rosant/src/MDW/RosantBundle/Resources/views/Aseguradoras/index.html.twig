{% extends '::base.html.twig' %}
{% block title %}Aseguradoras{% endblock title %}
{% block stylesheets %}
        {{ parent() }}
        
{% endblock %}
  
{% block javascripts %}
      {{ parent() }}
{% endblock %}
{% block body -%}
<div id="contenedor" class="register">
  {{ parent() }}
  <h2>Listado De Aseguradoras</h2>
<div class="post"><a><img src="{{ asset('img/business-banner.jpg') }}"/></a></div>
 <a href="{{ path('aseguradoras_new') }}" class="enlace">
                Registrar una nueva Aseguradora
            </a>
    <table id="datatables"  class="display">
        <thead>
            <tr>
                <th>Id</th>
                <th>Codigo</th>
                <th>Ruc</th>
                <th>Direccion</th>
                <th>Telefono</th>
                <th>Nombre</th>
                <th>Opciones</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}

            <tr class="{{ cycle(["alt", ""], loop.index) }}">
                <td><a href="{{ path('aseguradoras_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.codigo }}</td>
                <td>{{ entity.ruc }}</td>
                <td>{{ entity.direccion }}</td>
                <td>{{ entity.telefono }}</td>
                <td>{{ entity.nombre }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('aseguradoras_edit', { 'id': entity.id }) }}">editar</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    </div>
      
    {% endblock %}
