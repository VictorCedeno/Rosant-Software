
{% if error %}
    <div class="_username"><strong>Usuario o contraseña Incorrectos</strong></div>
{% endif %}
 {% block stylesheets %}
      <link href="{{ asset('css/security.css') }}" type="text/css" rel="stylesheet" />
 {% endblock %}
<section class="container">
    <div class="_username">
      <h1>Bienvenido de Nuevo</h1>
    <form action="{{ path('login_check') }}" method="post">
        <label for="username">Usuario:</label>
        <p><input type="text" id="username" name="_username" value="{{ last_username }}" /></p>
        <label for="password">Contraseña:</label>
        <p><input type="password" id="password" name="_password" /></p>
        <input type="submit" name="login" value="Iniciar Sesión" />
    </form>
    </div>
</section>
