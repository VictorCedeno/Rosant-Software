{% extends '::base.html.twig' %}
{% block title %}Editar Póliza{% endblock title %}
{% block stylesheets %}
      <link href="{{ asset('css/poliza.css') }}" type="text/css" rel="stylesheet" />
        {{ parent() }}
{% endblock %}
{% block javascripts %}
        {{ parent() }}
{% endblock %}
{% block body -%}
  

    <form class="register" action="{{ path('polizas_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
         {{ parent() }}
    <h1>Edición de Poliza</h1>
         <img src="{{ asset('icons/polizaEdit.png') }}" class="centrada" />
  <input type="hidden" name="_method" value="PUT" />
       

                <fieldset class="row1">
                <legend>información de Póliza</legend>
                 {#   <p class="destacado">{{ nombre| raw }} {{ apellido }}</p> #}
                    <p>
                        {{ form_label(edit_form.numero, 'Número:')}}
                        {{ form_widget(edit_form.numero)}}
                        {{ form_label(edit_form.ramos, 'Ramo:')}}
                        {{ form_widget(edit_form.ramos)}}

                    </p>

           
                
                   <p>
                        {{ form_label(edit_form.cliente, ' Código cliente:')}}
                        {{ form_widget(edit_form.cliente, { 'attr': { 'readonly': 'true' } })}}
                        {{ form_label(edit_form.aseguradoras, 'Aseguradora:')}}
                        {{ form_widget(edit_form.aseguradoras)}}
                            
                   </p>

                    <p>
                        {{ form_label(edit_form.agentes, 'Agente:')}}
                        {{ form_widget(edit_form.agentes)}}
                        {{ form_label(edit_form.capitalAsegurado, 'Capital Asegurado:')}}
                        {{ form_widget(edit_form.capitalAsegurado)}}
                          
                    </p>
                        {{ form_label(edit_form.agentes, 'Agente:')}}
                        {{ form_widget(edit_form.agentes)}}
                        {{ form_label(edit_form.capitalAsegurado, 'Capital Asegurado:')}}
                        {{ form_widget(edit_form.capitalAsegurado)}}
                    <p>
                        {{ form_label(edit_form.marcas, 'Marca:')}}
                        {{ form_widget(edit_form.marcas)}}
                        {{ form_label(edit_form.modelo, 'Modelo:')}}
                        {{ form_widget(edit_form.modelo)}}
                    </p>

                     <p>
                        {{ form_label(edit_form.fechaPago, 'Fecha de Pago:')}}
                        {{ form_widget(edit_form.fechaPago)}}
                        <br /> <br />
                        {{ form_label(edit_form.vigenciaDesde, 'Vigencia Inicio:')}}
                        {{ form_widget(edit_form.vigenciaDesde)}}
                        <br /> <br />
                        {{ form_label(edit_form.vigenciaHasta, 'Vigencia Fin:')}}
                        {{ form_widget(edit_form.vigenciaHasta)}}
                            
                    </p>

                   </fieldset>
                {{ form_rest(edit_form) }}
               
          <div><button type="submit" class="button">Guardar Cambios</button>
            </form>
                <ul class="record_actions">
                     <li>
                        <a class="enlace" href="{{ path('polizas') }}">&#60;&#60;Regresar a la lista</a>
                     </li>
                      
                    <li>
                        <form action="{{ path('polizas_delete', { 'id': entity.id }) }}" method="post">
                            <input type="hidden" name="_method" value="DELETE" />
                            {{ form_widget(delete_form) }}
                            <button id="deleteEntity" type="submit" class="enlace">Eliminar</button>    
                        </form>
                    </li>
                </ul>
                  
                  {% for flashMessage in app.session.flashbag.get('notice') %}
                        <div id="alert">
                        <a class="alert" href="#alert"> {{ flashMessage }} </a> 
                         </div>
                    {% endfor %}
         
 
