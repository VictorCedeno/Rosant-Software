{% extends '::base.html.twig' %}
{% block stylesheets %}
        {{ parent() }}
{% endblock %}
{% block javascripts %}
  {{ parent() }}
{% endblock %}
{% block body -%}
   
 <div id="contenedor" class="register">
      {{ parent() }}
 <h2>Listado de Agentes</h2>

<div class="post"><a><img src="{{ asset('img/agentes.jpg') }}"/></a></div>

 <a href="{{ path('agente_new') }}" class="enlace">
                Registrar nuevo Agente
            </a>
    <table id="datatables" class="display">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Telefono</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('agente_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nombre }}</td>
                <td>{{ entity.telefono }}</td>
                <td>{{ entity.email }}</td>
                <td>
                <ul>
                    
                    <li>
                        <a href="{{ path('agente_edit', { 'id': entity.id }) }}">editar</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>

    {% endblock %}
