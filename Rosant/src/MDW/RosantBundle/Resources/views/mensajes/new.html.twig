{% extends '::base.html.twig' %}
{% block title %}Nuevo Mensaje{% endblock title %}
{% block stylesheets %}
      <link href="{{ asset('css/aseguradora.css') }}" type="text/css" rel="stylesheet" />
{% endblock %}
{% block body -%}
   

    <form class="register" action="{{ path('mensajes_create') }}" method="post" {{ form_enctype(form) }}>
         <h1>Nuevo Mensaje</h1>
          <img src="{{ asset('icons/mail.png') }}" class="centrada" />
 
        <fieldset class="row1">
                <legend>Informaci√≥n Requerida</legend>
                 
                <p>
                    {{ form_label(form.email, 'Email:')}}
                    {{ form_widget(form.email)}}
                    </br></br>
                    {{ form_label(form.asunto, 'Asunto:')}}
                    {{ form_widget(form.asunto)}}
                 
                          
                </p>

                <p>
                    {{ form_label(form.contenido, 'Mensaje:')}}
                    {{ form_widget(form.contenido)}}  
                </p>

            </fieldset>
                {{ form_rest(form) }}

                    <div><button type="submit" class="button" id="registrar">Enviar</button>
                    <a class="enlace" href="{{ path('clientes') }}">&#60;&#60;Regresar a la lista</a>
                </div>
               
            {% for flashMessage in app.session.flashbag.get('notice') %}
            <div id="alert">
                <a class="alert" href="#alert">{{ flashMessage }}</a> 
            </div>
           {% endfor %}    
      
    </form>





